@model EventCardViewModel

@* <a asp-controller="Events" asp-action="EventPage" class="single-card selling"> *@
<a href="./Events/EventPage" class="single-card @SetStatus()">
    <div class="card-name">
        <img src="https://picsum.photos/300/200/?random=9" alt="">
        <p>@Model.EventName</p>
    </div>
    <div class="card-info">
        <p class="card-event-date">@Model.EventTime</p>
        <p class="card-ticket-status">@Model.EventStatus</p>
        @* <p class="card-ticket-status">檢視活動</p> *@
        @* <p class="card-ticket-status">20小時候開賣</p> *@
    </div>
</a>

@functions{
    public string SetStatus(){
        if(Model.EventStatus == EventStatus.Selling)
        {
            return "green-status";
        }
        else
        {
            return "black-status";
        }
    }
}