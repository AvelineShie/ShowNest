@model EventCardViewModel

@* <a asp-controller="Events" asp-action="EventPage" class="single-card selling"> *@
<a href="#" class="single-card @Model.EventStatusCssClass">
    <div class="card-name">
        <img src="@Model.EventImgUrl " asp-route-id="@Model.EventId" alt="">
        <span>@Model.CategoryName</span>
        <p>@Model.EventName</p>
    </div>
    <div class="card-info">
        <p class="card-event-date"><i class="fa-regular fa-calendar-days"></i>@Model.EventTime</p>
        <p class="card-ticket-status">@Model.EventStatus</p>
        @* <p class="card-ticket-status">檢視活動</p>*@
        @* <p class="card-ticket-status">20小時候開賣</p>*@
    </div>
</a>