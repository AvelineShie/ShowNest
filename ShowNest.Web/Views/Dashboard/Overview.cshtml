@{
    ViewData["Title"] = "Overview";
}

@section topCSS {
    <link href="~/css/_partial/_dashborard_sidemenu_partial.css" rel="stylesheet" />
    <link href="~/css/Dashboard/Overview.css" rel="stylesheet" />
}





<section id="overview" class="d-flex section_wrap">
    <div class="sideBarMenu">
        <nav>
            <div><a href="#"><i class="fa-solid fa-arrow-up-right-from-square fa-sm"></i>組織公開頁面</a></div>
            <div><a href="?viewType=Overview"><i class="fa-solid fa-users fa-sm"></i>活動列表</a></div>
            <div><a href="?viewType=OrgAccount"><i class="fa-solid fa-cart-arrow-down fa-sm"></i>組織帳務</a></div>
            <p>組織設定</p>
            <div><a href="?viewType=OrgGeneralInfo"><i class="fa-solid fa-circle-info fa-sm"></i>一般資訊</a></div>
            <div><a href="?viewType=OrgAuthority"><i class="fa-solid fa-tags fa-sm"></i>權限管理</a></div>
        </nav>
    </div>

    <div class="main-content">
        <header class="org_header">
            <span class="org-name">組織名稱</span>
            <span class="org-title">深夜九點半搶銀行</span>
        </header>
        <div class="event-list-title">
            <h2 class="list-title">活動列表</h2>
        </div>
        <div class="ongoing-event-list gap">
            <h3>正在舉辦的活動</h3> 
            <a class="btn btn-primary">建立活動</a>
        </div> 
        <div class="events-box">
            <div class="events">
                <p>目前沒有正在舉辦的活動</p>
            </div>
        </div>

        <div class="event-list-title">
        <h2 id="list-title">已結束的活動</h2>
    </div>
    <div class="closed-events ">
        <div class="closed-event-container">
            <div class="org-list-title mt-2">
                <div class="event-name col-4">
                    <p>活動名稱</p>
                </div>
                <div class="col-4">
                    <p>活動開始時間</p>
                </div>
                <div class="col-4">
                    <p>狀態</p>
                </div>
            </div>
        <div class="org-list-group">
            <div class="list-names">
                    <div class="name-col col-4">
                        <p>搶銀行Live</p>
                    </div>
                    <div class="activity-time-col col-4">
                        <span class="date-time-group">
                            <p class="date">2024/02/01</p>
                            <p class="time">00:58</p>
                        </span>
                    </div>
                    <div class="state-col col-4">
                        <span  class="state">
                            <p>未發佈</p>
                        </span>
                    </div>
            </div>
            <div class="button-group mt-2 mb-4">
                    <button class="btn btn-primary">活動主控台</button>
                    <button class="btn btn-light">訂單</button>
                    <button class="btn btn-light">簽到簿</button>
                    <button class="btn btn-success"><i class="fa-solid fa-arrow-up-right-from-square"></i>活動頁面</button>
            </div>
        </div>
        </div>
        <div class="page-col mb-4">
            <div class="pages col-12">
                <div class="btn-toolbar d-flex pt-4 justify-content-end" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group me-2" role="group" aria-label="First group">
                        <button type="button" class="btn btn-warning">1</button>
                        <button type="button" class="btn btn-warning">2</button>
                        <button type="button" class="btn btn-warning">3</button>
                        <button type="button" class="btn btn-warning">4</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</section>
