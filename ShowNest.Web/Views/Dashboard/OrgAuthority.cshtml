@{
    ViewData["Title"] = "OrgAuthority ";
}


@section topCSS {
    <link href="~/css/_partial/_dashborard_sidemenu_partial.css" rel="stylesheet" />
    <link href="~/css/Dashboard/OrgAuthority.css" rel="stylesheet" />

}

<section id="orgAuthority" class="d-flex section_wrap">
    <div class="sideBarMenu">
        <nav>
            <div><a asp-controller="Organizations" asp-action="Index"><i class="fa-solid fa-arrow-up-right-from-square fa-sm"></i>組織公開頁面</a></div>            <div><a href="?viewType=Overview"><i class="fa-solid fa-users fa-sm"></i>活動列表</a></div>
            <div><a href="?viewType=OrgAccount"><i class="fa-solid fa-cart-arrow-down fa-sm"></i>組織帳務</a></div>
            <div><a href="?viewType=OrgGeneralInfo"><i class="fa-solid fa-circle-info fa-sm"></i>一般資訊</a></div>
            <div><a href="?viewType=OrgAuthority"><i class="fa-solid fa-tags fa-sm"></i>權限管理</a></div>
        </nav>
    </div>
    <div class="main-content">
        <header class="org_header">
            <span class="org-name">組織名稱</span>
            <span class="org-title bold">深夜九點半搶銀行</span>
        </header>
        <div class="org-authority-title">
            <h2 class="general-title">權限管理</h2>
            <p class="gap">你可以透過權限管理設定組織角色擁有的權限並邀請使用者擔任組織管理者。</p>
        </div>
        <div class="authority-list-group">
            <h3 class="subTitle bold">組織成員列表</h3>
            <div class="authority-list-container">
                <div class="list-title gap">
                    <div class="title-names pad col-1">
                        <p class="center col-1 bold ">使用者暱稱</p>
                    </div>
                    <div class="title-names pad col-1">
                        <p class="center col-1 bold">角色</p>
                    </div>
                    <div class="btn-group">
                    </div>
                </div>
                <div class="border"></div>
                <div class="owner-container authority-group ">
                    <div class="owner">
                        <p class="owner-names col-1"> <img src="https://picsum.photos/32/32/?random=10" alt="頭貼">Big Head</p>
                        <div class="title-names pad col-1">
                            <p class="center authority col-1 ">管理者 Admin</p>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-success">編輯</button>
                            <button class="btn btn-danger" disabled>刪除</button>
                        </div>
                    </div>
                </div>
                <div class="authority-group ">
                    <div class="owner">
                        <p class="owner-names col-1"> <img src="https://picsum.photos/32/31/?random=10" alt="頭貼">小弟</p>
                        <div class="title-names pad col-1">
                            <p class="center authority col-1 ">會計 Accountant</p>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-success">編輯</button>
                            <button class="btn btn-danger" >刪除</button>
                        </div>
                    </div>
                </div>
                <div class="invite-authority-group">
                    <div class="invite-box input-group-sm">
                        <input class="form-control" type="text" placeholder="請輸入Email">
                        <div class="title-names pad col-1">
                        <label class="Admin">
                        <input type="radio" class="center invite-names col-1" name="authority" value="Admin">管理者 Admin
                        </label>
                        <label class="Admin">
                        <input type="radio" class="center invite-names col-1" name="authority" value="Admin">管理者 Admin
                        </label>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-success">邀請</button>
                            <button class="btn btn-danger">取消</button>
                        </div>
                    </div>
                </div>
            </div>
                <div class="btn-invite-group">
                    <button class="btn-invite btn btn-success">邀請用戶</button>
                </div>
        </div>
    </div> 
</section>
