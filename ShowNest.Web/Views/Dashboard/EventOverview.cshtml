<div id="app" class="wrap" event-id="@Model">
    <div class="container">
        <!------------ side menu start ------------>
        <input type="checkbox" name="" id="sideMenu-active" />
        <div class="sideBarMenu">
            <nav>
                @* <div class="dropdown" id="sidemenu-dropdown">
