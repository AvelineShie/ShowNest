@model UserAccountViewModel
@section topCSS {
    <link href="~/css/_partial/_accountnavbarpartial.css" rel="stylesheet" />
    <link href="~/css/account/useredit.css" rel="stylesheet" />
}
<section class="section_wrap">
    <div id="UserEdit" class="width">
        <div class="account-navigation-wrap">
            @await Html.PartialAsync("_AccountNavBarPartial", new List<TabStatusViewModel>
            {
            new TabStatusViewModel { IsActive = true},
            new TabStatusViewModel { IsActive = false},
            new TabStatusViewModel { IsActive = false},
            new TabStatusViewModel { IsActive = false},
            new TabStatusViewModel { IsActive = false},
            new TabStatusViewModel { IsActive = false},
            new TabStatusViewModel { IsActive = false}
            })
        </div>
        <form asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="main-form">
                <div class="content-wrapper">
                    <div class="form_contaner">
                        <!-- ----------------使用者名稱----------------  -->
                        <label for="">使用者名稱</label>
                        <div class="form-content input-group-sm">
                            <input class="form-control col-12" id="" asp-for="Account" type="text" name="Account" placeholder="">
                            <p class="caption">您可以用此帳號登入 ShowNest 帳號只能使用字母、數字或底線且不能與其他 會員重複。</p>
                        </div>
                        <!-- -------------------暱稱-------------------  -->
                        <label for="">暱稱</label>
                        <div class="form-content input-group-sm">
                            <input class="form-control col-12" id="" asp-for="Nickname" type="text" name="Nickname" placeholder="">
                            <p class="caption">您的暱稱會顯示在個人頁面、活動頁面等地方</p>
                        </div>
                        <!--  ----------------聯絡方式------------------  -->
                        <label for="">聯絡方式</label>
                        <div class="form-content">
                            <div class="contect-group input-group-sm">
                                <label class="email" for="Email">Email</label>
                                <input asp-for="Email" type="email" class="form-control mb-4" id="" name="Email"
                                       placeholder="Email">
                                <p></p>
                            </div>
                            <div class="contect-group">
                                <label for="phone-number">手機號碼</label>
                                <div class="num-group">
                                    <div class="phone-num">
                                        <span class="numbers input-group-sm">
                                            <input class="form-control" asp-for="Mobile" type="tel" id="" name="Mobile"
                                                   placeholder="phone number">
                                        </span>
                                    </div>
                                    <p>修改聯絡資料需要重新驗證方能啟用。</p>
                                </div>
                            </div>
                        </div>
                        <!-- ---------------出生年月日------------------  -->
                        <label for="">出生年月日</label>
                        <div class="form-content input-group-sm">
                            <input class="form-control" id="birthday" asp-for="Birthday" type="date" name="Birthday">
                        </div>
                        <!-- ----------------生理性別-------------------- -->
                        <label for="">生理性別</label>
                        <div class="form-content input-group-sm">
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" name="Gender" id="sex">
                            </select>
                        </div>
                        <!-- ------------------偏好活動地區-------------- -->
                        <label for="">偏好活動地區</label>
                        <div class="form-content input-group-sm">
                            <div class="option-group">
                                <ul>
                                    <li>
                                        <input class="add-option" id="northern-region" type="checkbox" name="SelectedAreaIds" value="1" @(Model.SelectedAreas.Contains(1) ? "checked" : "")>
                                        <label for="northern-region">北北基宜地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="taozhumiao-area" type="checkbox" name="SelectedAreaIds" value="2" @(Model.SelectedAreas.Contains(2) ? "checked" : "")>
                                        <label for="taozhumiao-area">桃竹苗地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="yunjianan-area" type="checkbox" name="SelectedAreaIds" value="3" @(Model.SelectedAreas.Contains(3) ? "checked" : "")>
                                        <label for="yunjianan-area">雲嘉南地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="high-mountain-region" type="checkbox" name="SelectedAreaIds" value="4" @(Model.SelectedAreas.Contains(4) ? "checked" : "")>
                                        <label for="high-mountain-region">高屏地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="central-taiwan-region" type="checkbox" name="SelectedAreaIds" value="5" @(Model.SelectedAreas.Contains(5) ? "checked" : "")>
                                        <label for="central-taiwan-region">中彰投地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="flower-island-region" type="checkbox" name="SelectedAreaIds" value="6" @(Model.SelectedAreas.Contains(6) ? "checked" : "")>
                                        <label for="flower-island-region">花東地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="outer-island-region" type="checkbox" name="SelectedAreaIds" value="7" @(Model.SelectedAreas.Contains(7) ? "checked" : "")>
                                        <label for="outer-island-region">澎金馬地區</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="hong-kong" type="checkbox" name="SelectedAreaIds" value="8" @(Model.SelectedAreas.Contains(8) ? "checked" : "")>
                                        <label for="hong-kong">香港</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="macao" type="checkbox" name="SelectedAreaIds" value="9" @(Model.SelectedAreas.Contains(9) ? "checked" : "")>
                                        <label for="macao">澳門</label>
                                    </li>
                                    <li>
                                        <input class="add-option" id="other-region" type="checkbox" name="SelectedAreaIds" value="10" @(Model.SelectedAreas.Contains(10) ? "checked" : "")>
                                        <label for="other-region">其他地區</label>
                                    </li>
                                </ul>
                            </div>
                            <p>我們將以此為您推薦該地區活動</p>
                        </div>
                        <!-- ------------------個人網站------------------ -->
                        <label class="website" for="">個人網站</label>
                        <div class="form-content input-group-sm">
                            <input class="form-control" id="" asp-for="PersonalURL" type="url" name="PersonalURL" placeholder="">
                        </div>
                        <!-- ------------------個人簡介------------------ -->
                        <label for="">個人簡介</label>
                        <div class="form-content form-floating input-group-sm">
                            <textarea asp-for="PersonalProfile" name="PersonalProfile" class="description-content form-control" placeholder="個人簡介輸入這裡"
                                      id="floating-textarea" rows="6"></textarea>
                        </div>
                        <!-- ---------------進階帳號管理----------------- -->
                        <label for="">進階帳號管理</label>
                        <div class="form-content input-group-sm">
                            <div class="checkbox-group">
                                <a class="delete-acc mt-2" href="#">我要刪除帳號</a>
                                <div class="subscribe-group mt-2">
                                    <ul>
                                        <li>
                                            <input class="sub-option" id="sub-news" asp-for="EdmSubscription" type="checkbox"
                                                   name="EdmSubscription" value="sub-news">
                                            <label class="" for="sub-news">訂閱 ShowNest 的最新消息</label>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 右邊 -->
                <div class="image-upload">
                    <div class="img-container">
                        <img src="https://picsum.photos/200/150/?random=10">
                    </div>
                    <a class="file-input ">
                        <input class="file-upload form-control form-control-sm" asp-for="Image" type="file" name="Image" id="form-control-sm">
                    </a>
                    <span class="help-block pb-4">
                        <p>建議圖片尺寸為 250x250 以上正方形圖片，最大檔案容量為2MB。如果沒有上傳，會使用系統預設圖片。</p>
                    </span>
                </div>
            </div>
            <!---->
            <div class="border"></div>
            <!-- ---------------儲存個人資料按鈕-------------- -->
            <div class="div-wrap">
                <div class="btn-save">
                    <button type="submit" class="btn " style="background-color:var(--main-green);color: white;border:none;">
                        儲存個人資料
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>